{
  // Force vars to be camelCased or UPPER_CASE
  "camelcase": true,
  // Force {} around single line if and while blocks
  "curly": true,
  // Force wrapping self-invocating function in parentheseses
  "immed": true,
  // Force two spaces indentation
  "indent": 2,
  // Force var definition to be present on top of block
  "latedef": true,
  // Force constructor methods to start with a capitalized letter
  "newcap": true,
  // Allow use of ++ and -- operator
  "plusplus": false,
  // Force strings to use single quotes
  "quotmark": "single",
  // Prohibits trailing whitespace
  "trailing": true,
  // Allow browser-specific objects
  "browser": true,
  // Allow node-specific objects
  "node": true,
  // List of custom globals jshint should know about
  "globals": {
    "angular": false,
    "_": true,
    "$": false,
    "moment": false
  },

  // Prohibit & and |, prevent mistyped && or ||
  "bitwise": true,
  // Prohibits != and == in favor of !== and ===
  "eqeqeq": true,
  // Force ECMAScript 3 specification
  "es3": true,
  // Force filtering for in loops on hasOwnProperty
  "forin": true,
  // Prohibit extending native object prototypes
  "freeze": true,
  // Prohibits use of .caller and .callee
  "noarg": true,
  // Prohibits calling new Something() with assigning it to a var.
  "nonew": true,
  // Prohibits using an undefined variable
  "undef": true,
  // Prohibits not using a defined variable
  "unused": true
}
